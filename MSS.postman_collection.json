{
  "info": {
    "name": "Manager Self-Service (MSS)",
    "_postman_id": "22bb33cc-44dd-55ee-99ff-001122334466",
    "description": "MSS APIs: team overview, approvals (leave/attendance/transfer), team performance & training progress",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8080" },
    { "key": "managerId", "value": "00000000-0000-0000-0000-000000000010" },
    { "key": "employeeId", "value": "00000000-0000-0000-0000-000000000000" },
    { "key": "approvalId", "value": "00000000-0000-0000-0000-000000009001" }
  ],
  "item": [
    {
      "name": "Team Overview",
      "item": [
        {
          "name": "Get Team Members",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/mss/team?manager_id={{managerId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "mss", "team"],
              "query": [{ "key": "manager_id", "value": "{{managerId}}" }]
            }
          }
        },
        {
          "name": "Team Dashboard (stub)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/mss/dashboard?manager_id={{managerId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "mss", "dashboard"],
              "query": [{ "key": "manager_id", "value": "{{managerId}}" }]
            }
          }
        }
      ]
    },
    {
      "name": "Approvals",
      "item": [
        {
          "name": "List Pending Approvals",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/mss/approvals?manager_id={{managerId}}&status=Pending",
              "host": ["{{baseUrl}}"],
              "path": ["api", "mss", "approvals"],
              "query": [
                { "key": "manager_id", "value": "{{managerId}}" },
                { "key": "status", "value": "Pending" }
              ]
            }
          }
        },
        {
          "name": "Approve Request",
          "request": {
            "method": "PUT",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"Approved\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/mss/approvals/{{approvalId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "mss", "approvals", "{{approvalId}}"]
            }
          }
        },
        {
          "name": "Reject Request",
          "request": {
            "method": "PUT",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"Rejected\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/mss/approvals/{{approvalId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "mss", "approvals", "{{approvalId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Team Performance & Training",
      "item": [
        {
          "name": "List Team Performance",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/mss/performance?manager_id={{managerId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "mss", "performance"],
              "query": [{ "key": "manager_id", "value": "{{managerId}}" }]
            }
          }
        },
        {
          "name": "Get Employee Training Progress (stub)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/mss/training-progress?manager_id={{managerId}}&employee_id={{employeeId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "mss", "training-progress"],
              "query": [
                { "key": "manager_id", "value": "{{managerId}}" },
                { "key": "employee_id", "value": "{{employeeId}}" }
              ]
            }
          }
        }
      ]
    }
  ]
}
