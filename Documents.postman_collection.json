{
  "info": {
    "name": "Document Management",
    "_postman_id": "4e5f6a7b-8c9d-4a1b-b2c3-d4e5f6a7b8c9",
    "description": "Document management APIs: employee documents, templates, renewal reminders",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8080" },
    { "key": "employeeId", "value": "00000000-0000-0000-0000-000000000000" },
    { "key": "documentId", "value": "00000000-0000-0000-0000-000000006001" },
    { "key": "templateId", "value": "00000000-0000-0000-0000-000000006002" },
    { "key": "reminderId", "value": "00000000-0000-0000-0000-000000006003" }
  ],
  "item": [
    {
      "name": "Employee Documents",
      "item": [
        {
          "name": "List Employee Documents",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/documents/employees/{{employeeId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "documents", "employees", "{{employeeId}}"]
            }
          }
        },
        {
          "name": "Create Employee Document",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"employee_id\": \"{{employeeId}}\",\n  \"document_type\": \"Iqama\",\n  \"document_name\": \"Iqama\",\n  \"document_number\": \"1234567890\",\n  \"issue_date\": \"2024-01-01\",\n  \"expiry_date\": \"2026-01-01\",\n  \"file_path\": \"/files/iqama_1234.pdf\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/documents",
              "host": ["{{baseUrl}}"],
              "path": ["api", "documents"]
            }
          }
        },
        {
          "name": "Get Employee Document",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/documents/{{documentId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "documents", "{{documentId}}"]
            }
          }
        },
        {
          "name": "Update Employee Document",
          "request": {
            "method": "PUT",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"is_signed\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/documents/{{documentId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "documents", "{{documentId}}"]
            }
          }
        },
        {
          "name": "Delete Employee Document",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{baseUrl}}/api/documents/{{documentId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "documents", "{{documentId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Document Templates",
      "item": [
        {
          "name": "List Templates",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/documents/templates",
              "host": ["{{baseUrl}}"],
              "path": ["api", "documents", "templates"]
            }
          }
        },
        {
          "name": "Create Template",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Employment Contract\",\n  \"description\": \"Standard Contract\",\n  \"template_file\": \"/templates/contract_en.docx\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/documents/templates",
              "host": ["{{baseUrl}}"],
              "path": ["api", "documents", "templates"]
            }
          }
        },
        {
          "name": "Get Template",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/documents/templates/{{templateId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "documents", "templates", "{{templateId}}"]
            }
          }
        },
        {
          "name": "Update Template",
          "request": {
            "method": "PUT",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"description\": \"Standard Contract (Updated)\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/documents/templates/{{templateId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "documents", "templates", "{{templateId}}"]
            }
          }
        },
        {
          "name": "Delete Template",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{baseUrl}}/api/documents/templates/{{templateId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "documents", "templates", "{{templateId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Renewal Reminders",
      "item": [
        {
          "name": "List Reminders",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/documents/reminders?employee_id={{employeeId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "documents", "reminders"],
              "query": [{ "key": "employee_id", "value": "{{employeeId}}" }]
            }
          }
        },
        {
          "name": "Create Reminder",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"document_id\": \"{{documentId}}\",\n  \"employee_id\": \"{{employeeId}}\",\n  \"reminder_date\": \"2025-12-15\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/documents/reminders",
              "host": ["{{baseUrl}}"],
              "path": ["api", "documents", "reminders"]
            }
          }
        },
        {
          "name": "Get Reminder",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/documents/reminders/{{reminderId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "documents", "reminders", "{{reminderId}}"]
            }
          }
        },
        {
          "name": "Mark Reminder Sent",
          "request": {
            "method": "PUT",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"sent\": true\n}" },
            "url": {
              "raw": "{{baseUrl}}/api/documents/reminders/{{reminderId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "documents", "reminders", "{{reminderId}}"]
            }
          }
        }
      ]
    }
  ]
}
