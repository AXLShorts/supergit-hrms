          "mode": "raw",
          "raw": "{\n  \"job_title\": \"Senior Engineer\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/employees/{{employeeId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "employees", "{{employeeId}}"]
        }
      }
    },
    {
      "name": "Delete Employee",
      "request": {
        "method": "DELETE",
        "url": {
          "raw": "{{baseUrl}}/api/employees/{{employeeId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "employees", "{{employeeId}}"]
        }
      }
    },
    {
      "name": "Add Employee Document",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"document_type\": \"Contract\",\n  \"document_name\": \"Employment Contract\",\n  \"file_url\": \"https://storage/doc.pdf\"\n}"
