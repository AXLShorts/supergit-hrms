    "description": "Employees module API collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8080" },
    { "key": "employeeId", "value": "00000000-0000-0000-0000-000000000000" }
  ],
  "item": [
    {
      "name": "List Employees",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/employees",
          "host": ["{{baseUrl}}"],
          "path": ["api", "employees"]
        }
      }
    },
    {
      "name": "Create Employee",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"first_name_en\": \"John\",\n  \"last_name_en\": \"Doe\",\n  \"first_name_ar\": \"جون\",\n  \"last_name_ar\": \"دو\",\n  \"gender\": \"Male\",\n  \"date_of_birth\": \"1990-01-01\",\n  \"nationality\": \"Saudi\",\n  \"mobile_number\": \"+966500000000\",\n  \"email\": \"john@example.com\",\n  \"job_title\": \"Engineer\",\n  \"department_id\": \"00000000-0000-0000-0000-000000000000\",\n  \"employment_status\": \"Active\",\n  \"join_date\": \"2024-01-01\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/employees",
          "host": ["{{baseUrl}}"],
          "path": ["api", "employees"]
        }
      }
    },
    {
