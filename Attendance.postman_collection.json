      "item": [
        {
          "name": "List Shifts",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/attendance/shifts",
              "host": ["{{baseUrl}}"],
              "path": ["api", "attendance", "shifts"]
