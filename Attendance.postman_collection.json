          }
        },
        {
          "name": "Create Shift",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Day\",\n  \"start_time\": \"09:00:00\",\n  \"end_time\": \"18:00:00\",\n  \"break_minutes\": 60\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/attendance/shifts",
              "host": ["{{baseUrl}}"],
              "path": ["api", "attendance", "shifts"]
            }
          }
